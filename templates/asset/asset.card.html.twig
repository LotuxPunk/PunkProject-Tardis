<div class="card" style="margin-bottom:10px;">
    {% if asset.thumbnailFilename %}
        <img class="card-img-top" src="{{asset('uploads/thumbnails/'~ asset.thumbnailFilename) | imagine_filter('asset')}}" alt="Image of {{asset.title}}">
    {% else %}
        <img src="{{asset('images/floppy.png') | imagine_filter('asset')}}" class="img-fluid rounded" alt="Image of {{asset.title}}">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">{{asset.title}}</h5>
        <p class="card-text">{{asset.comment | u.truncate(200, '...')}}</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><img src="{{avatar(asset.author)}}" width="30" height="30" class="img-fluid d-inline-block align-top rounded-circle" alt="" loading="lazy"> <a href="{{ path('user_show', {'id': asset.author.id}) }}">{{asset.author.username}}</a></li>
    </ul>
    <div class="card-footer">
        <div class="btn-group">
            <a href="{{ path('asset_show', {'id': asset.id}) }}" class='btn btn-secondary'>
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down-left-square align-middle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path fill-rule="evenodd" d="M5.5 11h4a.5.5 0 0 0 0-1H6.707l4.147-4.146a.5.5 0 0 0-.708-.708L6 9.293V6.5a.5.5 0 0 0-1 0v4a.5.5 0 0 0 .5.5z"/>
                </svg>
                Show
            </a>
            {% if app.user == asset.author or is_granted('ROLE_ADMIN') %}
                <a href="{{asset('uploads/assets/'~ asset.assetFilename)}}" class="btn btn-primary" target="_blank">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cloud-download" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/>
                        <path fill-rule="evenodd" d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z"/>
                    </svg>
                    Download
                </a>
            {% endif %}
        </div>
    </div>
</div>